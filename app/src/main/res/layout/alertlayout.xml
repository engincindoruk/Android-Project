<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ilanlarbackground"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Do You Want To Delete This Advert ?"
        android:textAlignment="center"
        android:textColor="#000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.4"
            android:id="@+id/imgalertimage"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/tvalertilanbaslik"
                android:textColor="#000"
                android:paddingLeft="5dp"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/location"
                    android:drawablePadding="5dp"
                    android:paddingBottom="8dp"
                    android:textColor="#000"
                    android:id="@+id/tvalertilanadres"
                    android:textSize="15dp"
                    android:gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="17dp"
                    android:paddingRight="8dp"
                    android:paddingTop="5dp"
                    android:id="@+id/tvalertilanprice"
                    android:textColor="#000"
                    android:textAlignment="textEnd"
                    android:layout_weight="1.3"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btnalertyes"
            android:background="@drawable/homemenu"
            android:layout_margin="5dp"
            android:text="YES"
            android:textSize="20dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/btnalertno"
            android:background="@drawable/homemenu"
            android:text="NO"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>
