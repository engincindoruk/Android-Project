<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CarAdd_2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Advert Title"
            android:gravity="bottom"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:paddingLeft="15dp"
            android:textSize="21dp"
            android:paddingBottom="8dp"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/etAdverttitle"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:textSize="15sp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingLeft="15dp"
            android:paddingBottom="8dp"
            android:text="Vehicle Price"
            android:textColor="#000"
            android:textSize="21dp" />
        <EditText
            android:id="@+id/etPrice"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:textSize="15sp"
            android:inputType="number"
            android:layout_height="match_parent"/>
        <Spinner
            android:layout_width="0dp"
            android:id="@+id/spnPrice"
            android:layout_weight="0.7"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingLeft="10dp"
            android:paddingBottom="3dp"
            android:text="KM"
            android:textColor="#000"
            android:textSize="21dp" />
        <EditText
            android:id="@+id/etKm"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="15sp"
            android:inputType="number"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingLeft="15dp"
            android:paddingBottom="3dp"
            android:text="Plate"
            android:textColor="#000"
            android:textSize="21dp" />
        <EditText
            android:id="@+id/etPlate"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="15sp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Explanation"
            android:gravity="bottom"
            android:textColor="#000"
            android:layout_marginRight="8dp"
            android:paddingLeft="15dp"
            android:textSize="21dp"
            android:paddingBottom="8dp"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/etExplanation"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:textSize="15sp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buttonbackground"
        android:id="@+id/btnSave2"
        android:text="Next"
        android:textSize="25dp"
        android:textColor="#fff"/>


</LinearLayout>