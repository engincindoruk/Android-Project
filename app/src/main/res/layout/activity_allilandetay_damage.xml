<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AllilandetayDamageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingTop="25dp"
        android:text="CAR STATUS"
        android:textAlignment="center"
        android:textColor="@color/colorBoldRed"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Color Status"
            android:gravity="bottom"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:paddingLeft="15dp"
            android:textSize="21dp"
            android:paddingBottom="8dp"
            android:layout_height="match_parent"/>
        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:id="@+id/rgdetaycolor"
            android:layout_height="match_parent">
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:enabled="false"
                android:text="Yes"
                android:id="@+id/rbdetaycoloryes"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="No"
                android:enabled="false"
                android:checked="true"
                android:id="@+id/rbdetaycolorno"/>
        </RadioGroup>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:text="Not Any Entered Color Status"
        android:clickable="false"
        android:enabled="false"
        android:layout_height="60dp"
        android:id="@+id/etdetayColordetails"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Changing"
            android:gravity="bottom"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:paddingLeft="15dp"
            android:textSize="21dp"
            android:paddingBottom="8dp"
            android:layout_height="match_parent"/>
        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:id="@+id/rgdetaychangetrack"
            android:layout_height="match_parent">
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:enabled="false"
                android:text="Yes"
                android:id="@+id/rbdetaychangeyes"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="No"
                android:enabled="false"
                android:checked="true"
                android:id="@+id/rbdetaychangeno"/>
        </RadioGroup>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:text="Not Any Entered Changing"
        android:enabled="false"
        android:layout_height="60dp"
        android:id="@+id/etdetayChangedetails"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Tramer"
            android:gravity="bottom"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:paddingLeft="15dp"
            android:textSize="21dp"
            android:paddingBottom="8dp"
            android:layout_height="match_parent"/>
        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:id="@+id/rgdetaytramer"
            android:layout_height="match_parent">
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:enabled="false"
                android:text="Yes"
                android:id="@+id/rbdetaytrameryes"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:enabled="false"
                android:text="No"
                android:checked="true"
                android:id="@+id/rbdetaytramerno"/>
        </RadioGroup>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:text="Not Any Entered Tramer"
        android:enabled="false"
        android:layout_height="60dp"
        android:id="@+id/etdetayTramerdetails"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Explanation"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#e84118"/>

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvdetayadvertexplanation"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_height="match_parent"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>