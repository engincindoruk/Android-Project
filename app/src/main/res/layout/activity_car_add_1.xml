<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CarAdd_1Activity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GENERAL FEATURES"
        android:textStyle="bold|italic"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorBoldRed"
        android:textAlignment="center"
        android:paddingTop="25dp"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:text="Transmission:"
            android:textColor="#000"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textSize="21dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Spinner
            android:id="@+id/spnTransmission"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:text="Fuel:"
            android:textColor="#000"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textSize="21dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Spinner
            android:id="@+id/spnFuel"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:text="Casa Type:"
            android:textColor="#000"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textSize="21dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Spinner
            android:id="@+id/spnCasatype"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:text="Power:"
            android:textColor="#000"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textSize="21dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:inputType="number"
            android:maxLength="3"
            android:id="@+id/etPower"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:text="HP"
            android:textColor="#000"
            android:paddingTop="18dp"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:text="Capacity:"
            android:textColor="#000"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textSize="21dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:inputType="number"
            android:maxLength="4"
            android:id="@+id/etCapacity"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:text="CC"
            android:textColor="#000"
            android:paddingTop="18dp"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buttonbackground"
        android:id="@+id/btnSave1"
        android:text="Next"
        android:textSize="25dp"
        android:textColor="#fff"/>

</LinearLayout>