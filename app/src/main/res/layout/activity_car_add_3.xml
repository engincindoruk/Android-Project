<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CarAdd_3Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Damage Query"
        android:textStyle="bold|italic"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorBoldRed"
        android:textAlignment="center"
        android:paddingTop="25dp"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Color Status"
            android:gravity="bottom"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:paddingLeft="15dp"
            android:textSize="21dp"
            android:paddingBottom="8dp"
            android:layout_height="match_parent"/>
        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:id="@+id/rgcolor"
            android:layout_height="match_parent">
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:text="Yes"
                android:id="@+id/rbcoloryes"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="No"
                android:checked="true"
                android:id="@+id/rbcolorno"/>
        </RadioGroup>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:hint="Explanation Area"
        android:enabled="false"
        android:paddingTop="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/etColordetails"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Changing"
            android:gravity="bottom"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:paddingLeft="15dp"
            android:textSize="21dp"
            android:paddingBottom="8dp"
            android:layout_height="match_parent"/>
        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:id="@+id/rgchangetrack"
            android:layout_height="match_parent">
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:text="Yes"
                android:id="@+id/rbchangeyes"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="No"
                android:checked="true"
                android:id="@+id/rbchangeno"/>
        </RadioGroup>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:hint="Explanation Area"
        android:enabled="false"
        android:paddingTop="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/etChangedetails"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Tramer"
            android:gravity="bottom"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:paddingLeft="15dp"
            android:textSize="21dp"
            android:paddingBottom="8dp"
            android:layout_height="match_parent"/>
        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:id="@+id/rgtramer"
            android:layout_height="match_parent">
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:text="Yes"
                android:id="@+id/rbtrameryes"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="No"
                android:checked="true"
                android:id="@+id/rbtramerno"/>
        </RadioGroup>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:hint="Explanation Area"
        android:paddingTop="15dp"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:id="@+id/etTramerdetails"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buttonbackground"
        android:id="@+id/btnSave3"
        android:text="Next"
        android:textSize="25dp"
        android:textColor="#fff"/>


</LinearLayout>